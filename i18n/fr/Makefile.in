@SET_MAKE@
SHELL = @SHELL@
VPATH = @srcdir@
INSTALL = @INSTALL@
LRELEASE = @LRELEASE@
RM = @RM@ 

srcdir = @srcdir@
top_srcdir = @top_srcdir@
top_builddir = ../..

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
datadir = @datadir@
libdir = @libdir@
mandir = @mandir@

LANG=dummy #overriden from the command line
man= ${DESTDIR}${mandir}/${LANG}/man1
qm= ${DESTDIR}${datadir}/djvu/osi/${LANG}

QMFILES = qt.qm djview.qm

MANFILES_STD = bzz.1 c44.1 cjb2.1 cpaldjvu.1 csepdjvu.1 \
               ddjvu.1 djvm.1 djvmcvt.1 djvu.1 djvudump.1 \
               djvuextract.1 djvumake.1 djvups.1 djvused.1 \
               djvuserve.1 djvutxt.1
@GUI_YES@MANFILES_GUI = nsdejavu.1 djview.1
@GUI_NO@MANFILES_GUI =
MANFILES= ${MANFILES_STD} ${MANFILES_GUI}

# (uncomment after translating nsdejavu.1.in)
NSDEJAVU1= # nsdejavu.1

all:
@GUI_YES@all: ${QMFILES} ${NSDEJAVU1}

@GUI_YES@install: install-qm
install: install-man

# Install localized qm files.
install-qm: ${QMFILES} FORCE
	test ${LANG} != dummy
	-${INSTALL} -d ${qm}
	-for n in ${QMFILES} ; do \
	  if test -r $$n ; then \
	    ${INSTALL} -m 644 $$n ${qm} ; \
	  elif test -r ${srcdir}/$$n ; then \
	    ${INSTALL} -m 644 ${srcdir}/$$n ${qm} ; \
	  fi ; \
	done

# Install localized man pages
install-man: FORCE ${NSDEJAVU1}
	test ${LANG} != dummy
	-${INSTALL} -d ${man}
	-for n in ${MANFILES} ; do \
	   if test -r $$n ; then \
	     ${INSTALL} -m 644 $$n ${man} ; \
	   elif test -r ${srcdir}/$$n ; then \
	     ${INSTALL} -m 644 ${srcdir}/$$n ${man} ; \
	   fi ; \
	done

# Generate nsdejavu page.
nsdejavu.1: ${srcdir}/nsdejavu.1.in
	  sed < ${srcdir}/nsdejavu.1.in > nsdejavu.1 \
	  -e 's,LIBDIR,${libdir},' -e 's,NSDEJAVUSO,${NSDEJAVU},'

# Boilerplate
clean: FORCE
	-test ${LRELEASE} = ":" || ${RM} *.qm

distclean: clean
	-${RM} Makefile

# Rules

FORCE:
.PHONY: FORCE
.SUFFIXES: .ts .qm

.ts.qm:
	ts=`basename $<`; \
	test -r $$ts || cp $< $$ts ; \
	echo TRANSLATIONS="$$ts" > tmp.pro ; \
	${LRELEASE} tmp.pro
